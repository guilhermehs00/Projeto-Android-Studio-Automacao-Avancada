<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="4dp"
    android:background="@drawable/rounded2_background">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="169dp" />

    <TextView
        android:id="@+id/notification"
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:layout_gravity="bottom|center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="171dp"
        android:background="@drawable/rounded_background"
        android:elevation="4dp"
        android:textAlignment="center"
        android:textColor="#28FF00"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/Dados"
        android:layout_width="380dp"
        android:layout_height="609dp"
        android:layout_gravity="bottom|center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="171dp"
        android:background="@drawable/rounded3_background"
        android:elevation="4dp"
        android:textAlignment="textStart"
        android:textColor="#28FF00"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/num_medicao"
        android:layout_width="100dp"
        android:layout_height="22dp"
        android:layout_gravity="center|top|left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_background"
        android:elevation="4dp"
        android:text="Medição"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/notification2"
        android:layout_width="280dp"
        android:layout_height="25dp"
        android:layout_gravity="bottom|center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="722dp"
        android:background="@drawable/rounded_background"
        android:elevation="4dp"
        android:textAlignment="center"
        android:textColor="#28FF00"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <Button
        android:id="@+id/botaoCamada"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:layout_marginLeft="335dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#000000"
        android:contentDescription="Alterar tipo de camada do mapa"
        android:elevation="4dp"
        app:icon="@drawable/camada"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="40dp"
        app:iconTint="#28FF00" />

    <Button
        android:id="@+id/RD1"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:layout_marginLeft="325dp"
        android:layout_marginTop="590dp"
        android:backgroundTint="#28FF00"
        android:contentDescription="Alterar tipo de camada do mapa"
        android:elevation="4dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="RD"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="40dp"
        app:iconTint="#28FF00" />

    <Button
        android:id="@+id/RD2"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:layout_marginLeft="325dp"
        android:layout_marginTop="530dp"
        android:backgroundTint="#FFF200"
        android:contentDescription="Reconciliação rota 2"
        android:elevation="4dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="RD"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="40dp"
        app:iconTint="#28FF00" />

    <Button
        android:id="@+id/RD3"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:layout_marginLeft="325dp"
        android:layout_marginTop="470dp"
        android:backgroundTint="#000000"
        android:contentDescription="Reconciliação rota 3"
        android:elevation="4dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="RD"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="40dp"
        app:iconTint="#28FF00" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/Rotas"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipRota1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#010700"
            android:checkable="true"
            android:text="Trajetória 1"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipRota2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFF200"
            android:checkable="true"
            android:text="Trajetória 2"
            android:textColor="#000000"
            android:textStyle="bold" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipRota3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#28FF00"
            android:checkable="true"
            android:text="Trajetória 3"
            android:textColor="#000000"
            android:textStyle="bold" />

    </com.google.android.material.chip.ChipGroup>

    <LinearLayout
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:background="@drawable/rounded_background"
        android:elevation="4dp"
        android:layout_marginTop="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000"
            android:text="Nome do Usuário"
            android:textColor="#28FF00"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000"
            android:text="Id do Usuario"
            android:textColor="#28FF00"
            android:textSize="12dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_background"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/labelsizeFila"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cronômetro"
            android:textAlignment="center"
            android:textColor="#C60202"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/latitudeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latitude: "
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/longitudeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Longitude: "
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addRegionButton"
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:backgroundTint="#28FF00"
                android:text="Deslocamento anterior"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/botaoLimparFila"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="#00000000"
                android:contentDescription="Limpar todos os marcadores da fila"
                app:icon="?attr/actionModeSelectAllDrawable"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="43dp"
                app:iconTint="#C60202" />

            <Button
                android:id="@+id/GravarBdButtom"
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:backgroundTint="#28FF00"
                android:text="Matriz de deslocamentos"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>